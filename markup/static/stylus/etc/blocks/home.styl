.home__features
  padding-bottom 90px
  
  background-color #f9f9f9

.home__features-row-top
  transform translateY(-115px)

.home__features-cart
  box-sizing border-box
  padding 45px 20px 50px 20px
  
  background-color white
  box-shadow: 0px 0px 24px -5px rgba(0,0,0,0.3);
  
  border-radius 6px
  
.home__deal-icon,
.home__experience-icon,
.home__business-icon
  width 46px
  height 46px
  .deal,
  .experience,
  .business
    width 46px
    height 46px
    
    fill blueLight
      
.home__features-border
  width 93%
  height 1px
  
  background-color #e8e8e8
  
.home__features-button
  transition 0.2s ease
  &:hover
    background-color blueLight
  &--about
    &:hover
      background-color gray
    
.home__light-icon
  display block
  width 26px
  height 46px
  .light
    width 26px
    height 46px
    
    fill blueLight
    
.home__like-icon
  display block
  width 42px
  height 46px
  .like
    width 42px
    height 46px
    
    fill blueLight
    
.home__mechanism-icon
  display block
  width 49px
  height 46px
  .mechanism
    width 49px
    height 46px
    
    fill blueLight
    
.home__about
  padding-top 100px
  padding-bottom 100px
  
.home__about-cart
  padding-bottom 40px
  
  background-color white
  box-shadow: 0px 0px 24px -5px rgba(0,0,0,0.3);
  
  border-radius 6px
  
.home__about-cart-img-wrap
  height 260px
  
.home__about-cart-img
  display block
  
.home__about-cart-content
  padding 0 30px
  
.home__feedback
  height 435px
  
  background-image url('%=static=%content/feedback-bg.jpg')
  background-repeat no-repeat
  background-size cover
  
.home__feedback-button
  display: flex;
  flex-direction: row-reverse;
  justify-content: center;
  align-items center
  
  transition 0.2s ease
  &:hover
    background-color grey
  
.home__feedback-tel-icon
  display block
  width 10px
  height 13px
  margin-right 5px
  
  transform rotate(7deg)
  .tel
    width 10px
    height 13px
    
    fill white
    
.home__feedback-cart
  box-sizing border-box
  width 25%
  height 165px
  padding 0 40px
  
  background-color blueLight
  &:nth-child(2n)
    background-color #23aed9
  
.home__feedback-pin-icon
  display block
  width 26px
  height 46px
  .pin
    width 26px
    height 46px
    
    fill white
    
.home__feedback-cart-tel-icon
  display block
  width 36px
  height 46px
  .tel
    width 36px
    height 46px
    
    fill white
    
.home__feedback-clock-icon
  display block
  width 39px
  height 46px
  .clock
    width 39px
    height 46px
    
    fill white
    
.home__feedback-mail-icon
  display block
  width 46px
  height 46px
  .mail
    width 46px
    height 46px
    
    fill white
  &--blogMail
    width 15px
    height 15px
    .mail
      width 15px
      height 15px
    
.home__scroll-top
  position fixed
  right 30px
  bottom 50px
  z-index 20
  
  display flex
  justify-content center
  align-items center
  width 44px
  height 44px
  
  background-color blueLight
  
  border-radius 50%
  
  transition all 0.2s ease
  &:hover
    background-color gray
  &--hidden
    visibility hidden
    
    background-color transparent
    
    transition all 0.2s ease
    .scroll-top-arrow
      display none
    
.scroll-top-arrow
  position relative
  
  display block
  width 10px
  height 10px
  &::before,
  &::after
    position absolute
    top 0
    bottom 0
    
    content ''
    
    width 100%
    height 2px
    margin auto
    
    background-color white
  &::before
    left 3px
    
    transform rotate(45deg)
  &::after
    right 3px
    
    transform rotate(-45deg)
    
@media(max-width 1300px)
  .home__features-row-top
    transform: translateY(-35px);
    
@media(max-width 1200px)
  .home__feedback-cart
    width 50%
    
@media(max-width 1180px)
  .home__about
    display block
    
  .home__about-cart
    width 47.254237%
    
  .home__about-cart-img-wrap
    height auto
    
@media(max-width 1160px)
  .home__features-cart
    width 310px
    
@media(max-width 1020px)
  .home__about
    padding-top 30px
    
@media(max-width 990px)
  .home__features-row-top
    display: block;
    margin-bottom 30px
    
    transform: translateY(0);
    
  .home__features-cart
    width auto
    margin-bottom 20px
    &:last-child
      margin-bottom 0
      
@media(max-width 768px)
  .home__about
    padding-bottom 20px
  
  .home__about-cart
    width auto
    
    box-shadow none
    
  .home__about-cart-img-wrap
    width: 80%;
    margin: 0 auto;
    
@media(max-width 640px)
  .home__feedback-cart
    width 100%
  