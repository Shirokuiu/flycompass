.main-nav
  padding-top 5px
  padding-right 30px
  padding-bottom 5px
  
  border-right 1px solid rgba(255, 255, 255, 0.3)

.main-nav__list
  reset-list()
  
.main-nav__items
  margin-right 20px
  &:last-child
    margin-right 0
    
.main-nav__item
  transition 0.2s ease
  &:hover
    color blueLight
  &--active
    color blueLight