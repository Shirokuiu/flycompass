doctype html
html(class="no-js", lang="ru")
  include ../components/head/head.pug
  head
    +head(head.defaults)
  body.page
    |%=symbols=%

    .wrapper
      .content
        header.page-header
          .page-header__row-top.page-header__row-top--inner#rowTop
            .container.row
              .logo
                a.logo__text.text.text--fw700(href="index.html") Flycompass
              nav.main-nav.grow.row.row--ai-c
                ul.main-nav__list.row.m--l-a
                  li.main-nav__items
                    a.main-nav__item.text.text--white14.text--fw600(href="index.html") Home
                  li.main-nav__items
                    a.main-nav__item.text.text--white14.text--fw600(href="#") Services
                  li.main-nav__items
                    a.main-nav__item.main-nav__item--active.text.text--white14.text--fw600(href="about.html") About
                  li.main-nav__items
                    a.main-nav__item.text.text--white14.text--fw600(href="contact-us.html") Contact us
                  li.main-nav__items
                    a.main-nav__item.text.text--white14.text--fw600(href="blog.html") Blog
                  li.main-nav__items
                .search
                  button.search__button.button(type="button")
                    span.search__icon
                      != pugHelpers.Icon.call(locals, {iconName: 'search', className: 'search'})
              .socials.row.row--ai-c.m--l30
                a.socials__items.socials__items--fb(href="#")
                  != pugHelpers.Icon.call(locals, {iconName: 'facebook', className: 'facebook'})
                a.socials__items.socials__items--tw(href="#")
                  != pugHelpers.Icon.call(locals, {iconName: 'twitter', className: 'twitter'})
                a.socials__items.socials__items--inst(href="#")
                  != pugHelpers.Icon.call(locals, {iconName: 'instagram', className: 'instagram'})
        main.page-content
        
          .home
            a.home__scroll-top.home__scroll-top--hidden(href="#rowTop")
              span.scroll-top-arrow
              
          .breadcrumbs.m--b15
            .container.row.row--jc-sb.row--ai-c
              h2.text.text--blueLight24.text--fw800 About
              .row
                a.breadcrumbs__link.text.text--grayLowLight12.text--fw400.text--uppercase(href="index.html") Home
                p.breadcrumbs__slash.text.text--grayLowLight12.text--fw400.text--uppercase /
                a.breadcrumbs__link.breadcrumbs__link--active.text.text--grayLowLight12.text--fw400.text--uppercase About
                
          .about.m--b10
            .column.column--ai-c.container
              .about__cart.column.column--ai-c.m--b25
                .about__cart-img-wrap.m--b10
                  img.about__cart-img(src="%=static=%img/content/about-img1.jpg" alt="director")
                h2.text.text--black20.text--fw400.m--b15 John Borthwick
                p.text.text--blueLowLight14.text--fw400.m--b15 Director
                p.text.text--grayMedium16.text--fw600.m--b15 John started the company in 2017
                .socials.socials--about.row.row--ai-c.m--b15
                  a.socials__items.socials__items--fb(href="#")
                    != pugHelpers.Icon.call(locals, {iconName: 'facebook', className: 'facebook'})
                  a.socials__items.socials__items--g(href="#")
                    != pugHelpers.Icon.call(locals, {iconName: 'googlePlus', className: 'googlePlus'})
                .b--w145
                  a.button.button--fill-blueLowLight.button--p-tb17.button--br5.text.text--white16.text--fw500(href="contact-us.html") Contact me
              .about__cart.column.column--ai-c
                .about__cart-img-wrap.m--b10
                  img.about__cart-img(src="%=static=%img/content/about-img2.jpg" alt="director")
                h2.text.text--black20.text--fw400.m--b15 Edwards Borthwick
                p.text.text--blueLowLight14.text--fw400.m--b15 Director
                p.text.text--grayMedium16.text--fw600.m--b15 Edward has run and advised a number of companies
                .socials.socials--about.row.row--ai-c.m--b15
                  a.socials__items.socials__items--fb(href="#")
                    != pugHelpers.Icon.call(locals, {iconName: 'facebook', className: 'facebook'})
                  a.socials__items.socials__items--g(href="#")
                    != pugHelpers.Icon.call(locals, {iconName: 'googlePlus', className: 'googlePlus'})
                  a.socials__items.socials__items--tw(href="#")
                    != pugHelpers.Icon.call(locals, {iconName: 'twitter', className: 'twitter'})
                .b--w145
                  a.button.button--fill-blueLowLight.button--p-tb17.button--br5.text.text--white16.text--fw500(href="contact-us.html") Contact me
                  
          .home__feedback.row.row--jc-c.row--ai-c
            .container.column.column--ai-c
              h2.text.text--white50.text--center.text--fw200.m--b5 Still Have Some Questions Left?
              h3.text.text--white50.text--center.text--fw600.m--b15 Call us 
                a.text.text--white50(href="tel:") Tel: 01908 315501
              p.text.text--white16.text--fw300.m--b40 Feel free to contact our support team to learn more about the services provided by us and multiple offers for Your business!
              .b--w200.row.row--ai-c
                a.home__feedback-button.button.button--fill-blueLight.button--p-tb17.text.text--white13.text--fw500.text--uppercase(href="#") Call us today
                  span.home__feedback-tel-icon
                    != pugHelpers.Icon.call(locals, {iconName: 'tel', className: 'tel'})
        
      footer.page-footer
        .footer-content
          .container.row.row--jc-sb.row--ai-c
            .logo
                a.logo__text.text.text--fw700(href="index.html") Flycompass
            .socials.socials--footer.row.row--ai-c
              a.socials__items.socials__items--fb(href="#")
                != pugHelpers.Icon.call(locals, {iconName: 'facebook', className: 'facebook'})
              a.socials__items.socials__items--tw(href="#")
                != pugHelpers.Icon.call(locals, {iconName: 'twitter', className: 'twitter'})
              a.socials__items.socials__items--inst(href="#")
                != pugHelpers.Icon.call(locals, {iconName: 'instagram', className: 'instagram'})

    script(src='%=static=%js/separate-js/svg4everybody.min.js')
    script svg4everybody();
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js')
    script(src='%=static=%js/separate-js/noframework.waypoints.min.js')

    //- Main scripts. You can replace it, but I recommend you to leave it here
    script(src='%=static=%js/main%=hash=%%=min=%.js')
