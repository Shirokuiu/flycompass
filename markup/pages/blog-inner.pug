doctype html
html(class="no-js", lang="ru")
  include ../components/head/head.pug
  head
    +head(head.learnMore)
  body.page
    |%=symbols=%

    .wrapper
      .content
        header.page-header#rowTop
          .page-header__row-top.page-header__row-top--inner#rowTop
            .container.row
              button.hamburger.hamburger--spin(type="button")
                span.hamburger-box
                  span.hamburger-inner
              .logo
                a.logo__text.text.text--fw700(href="index.html") Flycompass
              nav.main-nav.grow.row.row--ai-c
                ul.main-nav__list.main-nav__list--mobileHidden.row.m--l-a
                  li.main-nav__items
                    a.main-nav__item.main-nav__item--active.text.text--white14.text--fw600(href="index.html") Home
                  li.main-nav__items
                    a.main-nav__item.text.text--white14.text--fw600(href="services.html") Services
                  li.main-nav__items
                    a.main-nav__item.text.text--white14.text--fw600(href="about.html") About
                  li.main-nav__items
                    a.main-nav__item.text.text--white14.text--fw600(href="contact-us.html") Contact us
                  li.main-nav__items
                    a.main-nav__item.text.text--white14.text--fw600(href="blog.html") Blog
                  li.main-nav__items
                .search
                  button.search__button.button(type="button")
                    span.search__icon
                      != pugHelpers.Icon.call(locals, {iconName: 'search', className: 'search'})
                  .search__form.search__form--hidden
                    .row.row--jc-c.row--ia-c.grow
                      span.search__form-exit
                      .column.column--jc-c
                        .search__form-input-wrap.b--w445
                          input.search__form-input.text.text--white30.text--fw700(type="text" name="search" placeholder="Search..." autofocus)
                          span.search__icon.search__icon--form
                            != pugHelpers.Icon.call(locals, {iconName: 'search', className: 'search'})
              .socials.socials--header.row.row--ai-c.m--l30
                a.socials__items.socials__items--fb(href="#")
                  != pugHelpers.Icon.call(locals, {iconName: 'facebook', className: 'facebook'})
                a.socials__items.socials__items--tw(href="#")
                  != pugHelpers.Icon.call(locals, {iconName: 'twitter', className: 'twitter'})
                a.socials__items.socials__items--inst(href="#")
                  != pugHelpers.Icon.call(locals, {iconName: 'instagram', className: 'instagram'})
        main.page-content
        
          .home
            a.home__scroll-top.home__scroll-top--hidden(href="#rowTop")
              span.scroll-top-arrow
              
          .breadcrumbs.m--b80
            .container.row.row--jc-sb.row--ai-c
              h2.text.text--blueLight24.text--fw800 We can improve your companies costs
              .row
                a.breadcrumbs__link.text.text--grayLowLight12.text--fw400.text--uppercase(href="index.html") Blog
                p.breadcrumbs__slash.text.text--grayLowLight12.text--fw400.text--uppercase /
                a.breadcrumbs__link.breadcrumbs__link--active.text.text--grayLowLight12.text--fw400.text--uppercase Learn more
                
          .blog
          
            .container.column.column--ai-c
              .blog__posts
                .row.m--b30
                  a.blog__post-link.blog__post-link--block.text.text--grayLowLight12.text--fw400.text--uppercase.m--r5(href="#") December 19, 2017
                  p.text.text.text--grayLowLight12.text--fw400.m--r5 by
                    a.blog__post-link.blog__post-link--inline.text.text--blueLight12.text--fw400.text--uppercase.m--l5(href="#") Startabusiness01
                  p.text.text.text--grayLowLight12.text--fw400 in
                    a.blog__post-link.blog__post-link--inline.text.text--blueLight12.text--fw400.text--uppercase.m--l5(href="#") People
                a.blog__post-link.blog__post-link--block.text.text--gray30.text--fw800.text--lh27.m--b30(href="#") We can improve your companies costs
                p.text.text--grayLowLight14.text--fw300.text--lh27.m--b40 We can assist in reviewing your business costs and help you improve profit

                .socials.socials--blog.row.row--ai-c.m--b40
                  a.socials__items.socials__items--fb(href="#")
                    != pugHelpers.Icon.call(locals, {iconName: 'facebook', className: 'facebook'})
                  a.socials__items.socials__items--tw(href="#")
                    != pugHelpers.Icon.call(locals, {iconName: 'twitter', className: 'twitter'})
                  a.socials__items.socials__items--inst(href="#")
                    != pugHelpers.Icon.call(locals, {iconName: 'instagram', className: 'instagram'})
                
                .blog__border.m--b30
                
                h2.text.text--blueLight14.text--fw600.text--uppercase.m--b15 Leave a reply
                p.text.text--grayLowLight14.text--fw300.text--lh27.m--b20 Your email address will not be published. Required fields are marked *
                
                .contact-us.m--b30
                  form.contact-us__form.m--b10(action="action.php" method="post")
                    ul.contact-us__form-list
                      li.contact-us__form-list-items
                        label.contact-us__form-list-label.text.text--gray16.text--fw800.m--b10(for="name") Your name:
                        .contact-us__form-input-wrap
                          input.contact-us__form-input.text.text--grayLowLight14.text--fw300(type="text" placeholder="Enter please your name *" required)#name
                      li.contact-us__form-list-items
                        label.contact-us__form-list-label.text.text--gray16.text--fw800.m--b10(for="email") Your email:
                        .contact-us__form-input-wrap
                          input.contact-us__form-input.text.text--grayLowLight14.text--fw300(type="email" placeholder="Enter please your email *" required)#email
                      li.contact-us__form-list-items
                        label.contact-us__form-list-label.text.text--gray16.text--fw800.m--b10(for="mesage") Your message:
                        .contact-us__form-textarea-wrap
                          textarea.contact-us__form-input.contact-us__form-input--textarea.text.text--grayLowLight14.text--fw300(placeholder="Enter please your message")#mesage
                      li.contact-us__form-list-items
                        .b--w115
                          button.button.button--fill-blueLowLight.button--p-tb10.text.text--white13.text--fw400.text--uppercase(type="submit") Submit
        
      footer.page-footer
        .footer-content
          .container.row.row--jc-sb.row--ai-c
            .logo
                a.logo__text.text.text--fw700(href="index.html") Flycompass
            .socials.socials--footer.row.row--ai-c
              a.socials__items.socials__items--fb(href="#")
                != pugHelpers.Icon.call(locals, {iconName: 'facebook', className: 'facebook'})
              a.socials__items.socials__items--tw(href="#")
                != pugHelpers.Icon.call(locals, {iconName: 'twitter', className: 'twitter'})
              a.socials__items.socials__items--inst(href="#")
                != pugHelpers.Icon.call(locals, {iconName: 'instagram', className: 'instagram'})

